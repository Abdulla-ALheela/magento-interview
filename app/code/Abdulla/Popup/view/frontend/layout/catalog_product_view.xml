<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="catalog.product.related" remove="true" />


        <referenceBlock name="product.info.details">
            <block class="Abdulla\Popup\Block\Product\View\CustomRelated"
                   name="product.info.test_tab"
                   template="Abdulla_Popup::related-tab.phtml"
                   group="detailed_info">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Related Products</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>