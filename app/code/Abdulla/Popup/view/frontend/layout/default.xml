<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="abdulla.popup" template="Abdulla_Popup::popup.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Go to Product</argument>
                   <argument name="path" xsi:type="string">popup/index/redirect</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>